{
    "compilerOptions": {
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "system",
        "target": "es5",
        "importHelpers": true,
        "strict": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.symbol"
        ],
        "baseUrl": ".",
        "paths": {
            "tslib": [
                "node_modules/tslib/tslib.d.ts"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}